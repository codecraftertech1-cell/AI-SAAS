generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model chat {
  id        String   @id
  userId    String
  title     String?
  messages  Json
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([userId], map: "Chat_userId_idx")
}

model document {
  id        String   @id
  userId    String
  filename  String
  fileUrl   String
  fileType  String
  fileSize  Int
  content   String?
  summary   String?
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([userId], map: "Document_userId_idx")
}

model invoice {
  id              String       @id
  userId          String
  stripeInvoiceId String?
  amount          Float
  currency        String       @default("usd")
  status          String
  plan            invoice_plan
  createdAt       DateTime     @default(now())

  @@index([userId], map: "Invoice_userId_idx")
}

model mobileapp {
  id         String   @id
  userId     String
  title      String
  prompt     String
  code       String
  previewUrl String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime

  @@index([userId], map: "MobileApp_userId_idx")
}

model presentation {
  id          String   @id
  userId      String
  title       String
  slides      Json
  exportedUrl String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  @@index([userId], map: "Presentation_userId_idx")
}

model usagelog {
  id          String   @id
  userId      String
  feature     String
  creditsUsed Int
  metadata    Json?
  createdAt   DateTime @default(now())

  @@index([createdAt], map: "UsageLog_createdAt_idx")
  @@index([userId], map: "UsageLog_userId_idx")
}

model user {
  id                   String                  @id
  email                String                  @unique(map: "User_email_key")
  name                 String?
  password             String
  role                 user_role               @default(USER)
  avatar               String?
  subscriptionPlan     user_subscriptionPlan   @default(FREE)
  subscriptionStatus   user_subscriptionStatus @default(ACTIVE)
  credits              Int                     @default(100)
  totalCreditsUsed     Int                     @default(0)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  createdAt            DateTime                @default(now())
  updatedAt            DateTime
}

model website {
  id         String   @id
  userId     String
  title      String
  prompt     String
  code       String
  previewUrl String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime

  @@index([userId], map: "Website_userId_idx")
}

enum user_role {
  USER
  ADMIN
}

enum user_subscriptionPlan {
  FREE
  PAID
  PRO
}

enum invoice_plan {
  FREE
  PAID
  PRO
}

enum user_subscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  TRIAL
}
